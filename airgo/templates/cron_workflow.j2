apiVersion: argoproj.io/v1alpha1
kind: CronWorkflow
metadata:
  labels:
    app: {{PROJECT_NAME}}-{{DAG_ID}}
  name: {{PROJECT_NAME}}-{{DAG_ID}}
  namespace: {{NAMESPACE}}
spec:
  entrypoint: {{PROJECT_NAME}}-{{DAG_ID}}
  schedule: {{SCHEDULE}}
  timezone: "America/Los_Angeles"   # Default to local machine timezone
  startingDeadlineSeconds: 0
  concurrencyPolicy: "Forbid"      # Default to "Allow"
  successfulJobsHistoryLimit: 4     # Default 3
  failedJobsHistoryLimit: 4         # Default 1
  suspend: false                    # Set to "true" to suspend scheduling
  workflowSpec:
    serviceAccountName: argo-workflows
    arguments:
      parameters:
      - name: creationTimestampOverride
        value: ''
    templates: []
